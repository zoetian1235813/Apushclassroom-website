# --- Backend configuration ---
# SQLite database file path (will be created automatically if missing)
SQLITE_DB_PATH=./data/app.db

# Secret for signing JSON Web Tokens
JWT_SECRET=change_me_to_a_long_random_string

# Base URL of the frontend client (used for OAuth callbacks)
CLIENT_BASE_URL=http://localhost:5173

# WeChat Open Platform credentials (required for WeChat login)
WECHAT_APP_ID=
WECHAT_APP_SECRET=
WECHAT_REDIRECT_URI=http://localhost:4000/auth/wechat/callback

# SMTP settings for sending email verification codes
SMTP_HOST=smtp.example.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=no-reply@example.com
SMTP_PASS=your_smtp_password
EMAIL_FROM="APUSH Learning <no-reply@example.com>"

# Optional: override the default email verification code lifetime (in seconds)
# EMAIL_CODE_TTL=600

# --- Frontend configuration ---
# Base URL of the API server
VITE_API_BASE_URL=http://localhost:4000
